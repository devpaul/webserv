{
	"version": "2.1.0",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": true,
		"experimentalDecorators": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": false,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"outDir": "./_dist/src",
		"preserveConstEnums": true,
		"removeComments": false,
		"sourceMap": true,
		"strictNullChecks": false,
		"target": "ES6"
	},
	"include": [
		"./src/**/*.ts"
	]
}
