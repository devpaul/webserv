{
	"description": "Run unit tests",

	"reporters": [
		{
			"name": "runner",
			"options": {
				"hideSkipped": true,
				"hidePassed": true
			}
		},
		{
			"name": "lcov"
		}
	],

	"node": {
		"plugins": [
			"node_modules/ts-node/register/index.js"
		],

		"suites": [
			"src/**/*.spec.ts",
			"!_support"
		]
	}
}
