{
  "name": "webserv",
  "author": {
    "name": "Paul Shannon",
    "url": "https://devpaul.com"
  },
  "version": "1.3.0-pre",
  "description": "a quick, flexible, fully typed development server",
  "license": "MPL-2.0",
  "bin": {
    "webserv": "src/bin/webserv.js"
  },
  "main": "src/index",
  "bugs": {
    "url": "https://github.com/devpaul/webserv/issues"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/devpaul/webserv"
  },
  "scripts": {
    "bin": "ts-node ./src/bin/webserv",
    "build": "run-s copy build:quick",
    "build:dist": "tsc --build ./tsconfig.dist.json",
    "build:quick": "tsc",
    "build:watch": "tsc -w",
    "ci": "run-s build test test:integration",
    "clean": "shx rm -rf _dist",
    "copy": "run-s copy:src copy:package",
    "copy:src": "copyfiles src/**/*.html _dist",
    "copy:package": "copyfiles README.md package.json LICENSE _dist",
    "dist": "run-s clean copy build:dist update:version",
    "dist:release": "run-s clean copy build:dist update:version:dist",
    "lint": "eslint ./src/**/*.ts",
    "local": "npx -p file://./_dist webserv",
    "pretty": "prettier --write ./src/**",
    "start": "ts-node ./examples/hello",
    "start:chat": "ts-node ./examples/chat",
    "test": "intern",
    "test:integration": "intern config=@integration",
    "update:version": "ts-node ./support/updateVersion",
    "update:version:dist": "ts-node ./support/updateVersion --dist"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "busboy": "^0.2.14",
    "commander": "^2.9.0",
    "http-proxy": "^1.16.2",
    "mkdirp": "^0.5.1",
    "npm": "^6.11.3",
    "path-to-regexp": "^1.7.0",
    "pem": "^1.14.3",
    "send": "^0.17.1",
    "slash": "^3.0.0",
    "uuid": "^3.3.3",
    "winston": "^2.3.1",
    "ws": "^7.2.1",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.17.1",
    "@types/busboy": "^0.2.3",
    "@types/http-proxy": "^1.12.0",
    "@types/mkdirp": "^0.5.0",
    "@types/mockery": "^1.4.29",
    "@types/node": "12.7.5",
    "@types/node-fetch": "^2.5.2",
    "@types/npm": "^2.0.31",
    "@types/pem": "^1.9.2",
    "@types/send": "^0.14.3",
    "@types/sinon": "^7.5.0",
    "@types/uuid": "^3.4.6",
    "@types/yargs": "^13.0.2",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "codecov": "^2.3.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.8.0",
    "intern": "4.8.0",
    "lint-staged": "^9.2.5",
    "mockery": "^2.1.0",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "shelljs": "^0.7.5",
    "shx": "^0.3.2",
    "sinon": "^7.5.0",
    "ts-node": "8.7.0",
    "typescript": "^3.7.4"
  },
  "keywords": [
    "server",
    "proxy",
    "http",
    "https",
    "devserver",
    "development"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
