{
  "name": "webserv",
  "author": "Paul Shannon <pshannon@sitepen.com>",
  "version": "1.0.0-pre",
  "description": "a quick, flexible, fully typed development server",
  "license": "MPL-2.0",
  "bin": {
    "webserv": "bin/webserv.js"
  },
  "bugs": {
    "url": "https://github.com/devpaul/webserv/issues"
  },
  "engines": {
    "node": "6"
  },
  "main": "./_dist/src/index",
  "repository": {
    "type": "git",
    "url": "https://github.com/devpaul/webserv"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "pretty": "prettier --write",
    "test": "intern",
    "example": "ts-node ./examples/sample",
    "example-basic": "ts-node ./examples/basic",
    "example-proxy": "ts-node ./examples/proxy",
    "example-upload": "ts-node ./examples/upload"
  },
  "dependencies": {
    "busboy": "^0.2.14",
    "commander": "^2.9.0",
    "findup": "^0.1.5",
    "http-proxy": "^1.16.2",
    "mkdirp": "^0.5.1",
    "path-to-regexp": "^1.7.0",
    "pem": "^1.9.7",
    "send": "^0.15.4",
    "winston": "^2.3.1",
    "yargs": "^14.0.0"
  },
  "devDependencies": {
    "@types/busboy": "^0.2.3",
    "@types/commander": "^2.3.31",
    "@types/grunt": "^0.4.21",
    "@types/http-proxy": "^1.12.0",
    "@types/mkdirp": "^0.5.0",
    "@types/mockery": "^1.4.29",
    "@types/node": "12.7.5",
    "@types/pem": "^1.9.2",
    "@types/send": "^0.14.3",
    "@types/sinon": "^1.16.36",
    "@types/winston": "^2.2.0",
    "@types/yargs": "^13.0.2",
    "codecov": "^2.3.0",
    "grunt": "^1.0.1",
    "grunt-cli": "^1.2.0",
    "grunt-contrib-clean": "^1.1.0",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-shell": "^2.1.0",
    "grunt-tslint": "^5.0.1",
    "intern": "^4",
    "lint-staged": "^9.2.5",
    "load-grunt-tasks": "^3.5.2",
    "mockery": "^2.0.0",
    "prettier": "^1.18.2",
    "shelljs": "^0.7.5",
    "sinon": "^1.17.7",
    "ts-node": "^8.4.1",
    "typescript": "^3.4"
  },
  "keywords": [
    "server",
    "proxy",
    "http",
    "https",
    "devserver",
    "development"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
